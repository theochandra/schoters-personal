<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.schoterspersonal.component.views.HelveticaTextView
        android:id="@+id/tv_category_name"
        android:text="Category Name"
        android:textSize="@dimen/font_size_m"
        android:textColor="@color/colorDarkGrey"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_space_m"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.example.schoterspersonal.component.views.OpenSansTextView
        android:id="@+id/tv_category_description"
        android:text="Category Description"
        android:textSize="@dimen/font_size_s"
        android:textColor="@color/colorDarkGrey"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_space_xs"
        app:layout_constraintTop_toBottomOf="@+id/tv_category_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.example.schoterspersonal.component.views.OpenSansTextView
        android:id="@+id/tv_published_at"
        android:text="Published At"
        android:textSize="@dimen/font_size_s"
        android:textColor="@color/colorDarkGrey"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_space_xs"
        app:layout_constraintTop_toBottomOf="@+id/tv_category_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>